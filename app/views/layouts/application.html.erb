<!DOCTYPE html>
<html>
<head>
  <title>RootApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- MENU -->
<%= render 'layouts/navigation' %>

<!-- MESSAGES -->
<%= render 'layouts/messages' %>

<!-- VIEWS -->
<div class="container">
  <%= yield %>
</div>

<!-- FOOTER -->
<%= render 'layouts/footer' %>

</body>
</html>
